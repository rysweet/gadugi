# Gadugi Environment Variables
# Copy this file to .env and update with your values

# Neo4j Database Configuration
NEO4J_URI=bolt://localhost:7688
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-secure-password-here

# Redis Configuration (optional - for MCP service caching)
REDIS_HOST=localhost
REDIS_PORT=6379

# GitHub Configuration (for event service)
GITHUB_TOKEN=your-github-token-here
GITHUB_OWNER=your-github-username
GITHUB_REPO=your-repo-name

# OpenAI Configuration (optional - for LLM proxy service)
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic Configuration (optional - for LLM proxy service)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Service Ports (defaults shown)
EVENT_SERVICE_PORT=8000
MCP_SERVICE_PORT=8001
LLM_PROXY_PORT=8002

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock

# Security
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here

# Environment (development, staging, production)
ENVIRONMENT=development

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
