# Gadugi Environment Variables
# Copy this file to .env and update with your actual values

# Neo4j Configuration
NEO4J_PASSWORD=your_secure_password_here
NEO4J_AUTH=neo4j/your_secure_password_here
NEO4J_HOST=localhost
NEO4J_BOLT_PORT=7687
NEO4J_HTTP_PORT=7474
NEO4J_DATABASE=gadugi

# Docker Compose Environment
COMPOSE_PROJECT_NAME=gadugi

# Optional: Memory and performance tuning
NEO4J_PAGECACHE_SIZE=512M
NEO4J_HEAP_INITIAL_SIZE=512M
NEO4J_HEAP_MAX_SIZE=1G

# Security Note:
# - Never commit the actual .env file to version control
# - Use strong, unique passwords in production
# - Consider using a secrets management service for production deployments