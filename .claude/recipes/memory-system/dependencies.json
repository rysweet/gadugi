{
  "name": "memory-system",
  "version": "0.3.0",
  "dependencies": {
    "internal": [
      {
        "component": "event-system",
        "version": ">=0.3.0",
        "required": false,
        "purpose": "Publishing memory-related events (created, updated, pruned)"
      },
      {
        "component": "agent-framework",
        "version": ">=0.3.0",
        "required": true,
        "purpose": "Agent identity and lifecycle integration"
      }
    ],
    "external": [
      {
        "package": "neo4j",
        "version": ">=5.0.0",
        "required": true,
        "purpose": "Graph database for memory storage and associations"
      },
      {
        "package": "numpy",
        "version": ">=1.24.0",
        "required": true,
        "purpose": "Vector operations for memory embeddings"
      },
      {
        "package": "scikit-learn",
        "version": ">=1.3.0",
        "required": false,
        "purpose": "Similarity calculations and clustering (optional)"
      },
      {
        "package": "redis",
        "version": ">=4.5.0",
        "required": false,
        "purpose": "High-performance memory caching (optional)"
      },
      {
        "package": "pydantic",
        "version": ">=2.0.0",
        "required": true,
        "purpose": "Memory model validation and serialization"
      },
      {
        "package": "asyncio",
        "version": "builtin",
        "required": true,
        "purpose": "Async memory operations"
      },
      {
        "package": "lz4",
        "version": ">=4.3.0",
        "required": false,
        "purpose": "Memory compression for storage efficiency (optional)"
      }
    ]
  },
  "provides": [
    {
      "interface": "MemoryManager",
      "version": "1.0.0",
      "description": "Core interface for memory CRUD operations"
    },
    {
      "interface": "ContextManager",
      "version": "1.0.0",
      "description": "Context state management and switching"
    },
    {
      "interface": "MemoryQuery",
      "version": "1.0.0",
      "description": "Advanced memory search and retrieval"
    },
    {
      "interface": "MemoryStore",
      "version": "1.0.0",
      "description": "Low-level storage operations"
    }
  ]
}